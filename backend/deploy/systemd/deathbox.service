[Unit]
Description=DeathBox FastAPI Service
After=network.target

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/deathbox/backend
EnvironmentFile=/home/ubuntu/deathbox/backend/.env
ExecStart=/home/ubuntu/deathbox/backend/.venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=3

# Hardening
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
